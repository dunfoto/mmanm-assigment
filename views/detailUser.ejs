<i class="fas fa-arrow-left" onclick="window.history.back()"></i>
<h1 class="mt-4">Edit user <%= detailUser.name %></h1>

<form action="/user/<%= detailUser._id %>" method="POST">
    <div class="form-group">
        <label for="email">Email address</label>
        <input class="form-control" value="<%= detailUser.email%>" id="email" name="email">
    </div>
    <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" value="<%= detailUser.name %>" id="name" name="name">
    </div>
    <div class="form-group">
        <label for="role">Name</label>
        <select name="role" id="role" class="form-control">
            <% roles.forEach((role, index) => { %>
            <option <%= String(role._id) === String(detailUser.role) ? "selected": "" %> value="<%= role._id%>">
                <%= role.name %>
            </option>
            <% }) %>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>